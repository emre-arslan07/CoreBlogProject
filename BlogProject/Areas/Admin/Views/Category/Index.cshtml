@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<BlogProject.Entity.Concrete.Category>   
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2><b>Kategoriler</b></h2>
<br />
<a href="/Admin/Category/AddCategory" class="btn btn-info" style="float:right">Yeni Kategori</a>
<br />
<br />
<table class="table table-bordered">
    <tr>
        <th><b>#</b></th>
        <th>Kategori Adı</th>
        <th>Aktif/Pasif</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td><b>@item.CategoryID</b></td>
    <td>@item.CategoryName</td>
    @if (item.CategoryStatus == true)
    {
        <td><a href="/Admin/Category/UpdateCategoryStatus/@item.CategoryID" class="btn btn-warning">Pasif Yap</a></td>
    }
    else
    {
        <td><a href="/Admin/Category/UpdateCategoryStatus/@item.CategoryID" class="btn btn-primary">Aktif Yap</a></td>
    }
    <td><a href="#" class="btn btn-success">Düzenle</a></td>
</tr>
    }
</table>
<br />
@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new {page}))
