@model IEnumerable<BlogProject.Entity.Concrete.Comment>

<div class="comment-top">
    @if (Model.Count() > 0)
    {
        <h4>Yorumlar</h4>
    }
    else
    {
        <h4>Bu Bloğa Şu Ana Kadar Yorum Yapılmadı.İlk Yorum Yapan Siz olun</h4>
    }

    @foreach (var item in Model)
    {
        <div class="media">
            <img src="/BlogTema/images/t1.jpg" alt="" class="img-fluid" />
            <div class="media-body">
                <h5 class="mt-0">@item.CommentUserName</h5>
                <p>
                    @item.CommentContent
                </p>


            </div>
        </div>
    }
</div>