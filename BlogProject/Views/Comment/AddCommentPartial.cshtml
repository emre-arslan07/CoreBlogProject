<div class="comment-top">
    <h4>Bir Yorum Yapın</h4>
    <div class="comment-bottom">
        <form action="/Comment/AddCommentPartial" method="post">
            <input class="form-control" type="text" name="CommentUserName" placeholder="Ad Soyad" required="">
            <input class="form-control" type="email" name="Email" placeholder="Email" required="">

            <input class="form-control" type="text" name="CommentTitle" placeholder="Konu" required="">

            <textarea class="form-control" name="CommentContent" placeholder="Mesajınız..." required=""></textarea>
            <button type="submit" class="btn btn-primary submit" id="postComment">Gönder</button>
        </form>
    </div>
</div>
